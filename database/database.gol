package database
import (
	"fmt"
	_ "github.com/go-sql-driver/mysql"
	"github.com/jinzhu/gorm"
	"log"
)

var Db *gorm.DB

func init(){
	fmt.Println("mysql")
	var err error
	Db, err := gorm.Open("mysql", "root:12345678@tcp(localhost:3306)/book?charset=utf8mb4&parseTime=True&loc=Local&readTimeout=500ms")
	if err != nil {
		log.Printf("mysql connect error %v\n", err)
	}
	Db.SingularTable(true)
	if Db.Error != nil {
		log.Printf("database error %v\n", Db.Error)
	}
	defer Db.Close()
}